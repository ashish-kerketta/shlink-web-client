#!/usr/bin/env node
'use strict';

var process = require('process'),
    args = process.argv,
    scriptsHelper = require('./helper/scriptsHelper');

// Make sure the controller name was provided
if (args.length < 3) {
    var parts = args[1].split('/');

    console.log('Usage: ');
    console.log('    %s controllerName [moduleName]', parts[parts.length - 1]);
    process.exit(1);
}

scriptsHelper.createAngularElement('controller', args[2], args[3]);
